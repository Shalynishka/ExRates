                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'find'

        BoxLayout:
            spacing: '10dp'
            #size_hint: .2, .2
            Image:
                size_hint: .1, 1
                source: paths.images + 'appIcons/res.png'
