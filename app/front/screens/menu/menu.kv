#: import paths paths

Menu:

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: '1dp'
        canvas:
            Color:
                rgb: (.88, .88, .88)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            #spacing: '10dp'
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/home.png'
                    #width: '30dp'
                    #height: '30dp'
                    #y: self.parent.y
                    #x: self.parent.x
            AnchorLayout:
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=home]Home[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'home'

        BoxLayout:
            #spacing: '10dp'
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/cur.png'
                    #width: '30dp'
                    #height: '30dp'
                    #y: self.parent.y
                    #x: self.parent.x
            AnchorLayout:
                #padding: '30dp'
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=all currencies]All currencies[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'all'
        BoxLayout:
            #spacing: '30dp'
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/find.png'
                    width: '30dp'
                    height: '30dp'
                    y: self.parent.y
                    x: self.parent.x
            AnchorLayout:
                #padding: '50dp'
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=Find currency]Find currency[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'find'

        BoxLayout:
            #spacing: '10dp'
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/res.png'
                    width: '30dp'
                    height: '30dp'
                    y: self.parent.y
                    x: self.parent.x
            AnchorLayout:
                #padding: '30dp'
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=Resource]Resources[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'res'

        BoxLayout:
            #spacing: '10dp'
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/crypt.png'
                    width: '30dp'
                    height: '30dp'
                    y: self.parent.y
                    x: self.parent.x
            AnchorLayout:
                #padding: '60dp'
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=Cryptocurrency]Cryptocurrency[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'crypt'

        BoxLayout:
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/convert.png'
                    width: '30dp'
                    height: '30dp'
                    y: self.parent.y
                    x: self.parent.x
            AnchorLayout:
                #padding: '35dp'
                anchor_x: 'left'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=Converter]Converter[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'convert'

        BoxLayout:
            #size_hint: .2, .2
            AnchorLayout:
                size_hint: .3, 1
                Image:
                    size_hint: .3, 1
                    source: paths.images + 'appIcons/settings.png'
                    width: '30dp'
                    height: '30dp'
                    y: self.parent.y
                    x: self.parent.x

            AnchorLayout:
                anchor_x: 'left'
                #padding: '25dp'
                Label:
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                    markup: True
                    size_hint: 1, 1
                    text: '[ref=Settings]Settings[/ref]'
                    font_size: '30dp'
                    color: 0,0,0,1
                    on_ref_press: root.manager.current = 'settings'