Settings:

<Settings>:
    BoxLayout:
        orientation: 'vertical'
        padding: '1dp'
        canvas:
            Color:
                rgb: (.88, .88, .88)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            padding: '5dp'
            size_hint_y: .10
            orientation: 'horizontal'
            Button:
                size_hint: None, None
                width: '40dp'
                height: '40dp'
                on_press: root.manager.current = 'menu'
                canvas:
                    Color:
                        rgb: (.88, .88, .88)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: paths.images + 'appIcons/menu.png'
                    width: '40dp'
                    height: '40dp'
                    y: self.parent.y
                    x: self.parent.x

            Label:
                font_size: '30dp'

                text: 'Settings'
                color: 0,0,0,1
        Label:
            text: 'Your ads can be here'
            color: 0,0,1,1